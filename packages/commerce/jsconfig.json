{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "skipLibCheck": true,
        "paths": {
            "react": ["./node_modules/preact/compat/"],
            "react-dom": ["./node_modules/preact/compat/"],
            "ttag": ["./node_modules/ttag/dist/mock"],
            "preact-html-converter": ["./node_modules/preact-html-converter/dist/preact-html-converter.browser"],
            "~/*": ["./src/*"]
        }
    },
    "include": ["node_modules/vite/client.d.ts", "**/*"]
}
